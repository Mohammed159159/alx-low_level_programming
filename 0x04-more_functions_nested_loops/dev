#!/bin/bash
# This script takes a message as an argument and performs git commands
# Usage: dev "message"

# Check if the argument is provided
if [ -z "$1" ]; then
  echo "Please provide a message for the commit"
  exit 1
fi

# Assign the argument to a variable
message=$1

# Perform git commands with the message
git add .
git commit -m "dev: ${message}"
git push
